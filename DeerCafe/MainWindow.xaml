<Window x:Class="DeerCafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeerCafe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.477,0.524">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="443*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="348,244,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="btnLogin_CLick"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="317,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="242,175,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="244,208,0,0" VerticalAlignment="Top"/>
        <PasswordBox PasswordChar="*" HorizontalAlignment="Left" Margin="317,212,0,0" VerticalAlignment="Top" Width="120" Password="" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
